<PropertyList>

 <fx>
  <crank>
   <name>crank</name>
   <mode>looped</mode>
   <path>Sounds/cranking.wav</path>
   <condition>
    <property>/engines/engine/cranking</property>
   </condition>
   <volume>
    <offset>0.9</offset>
   </volume>
  </crank>

  	<engine>
  	    <name>enginecrash</name>
  	    <path>Aircraft/BMW-S-RR/Sounds/BMW-S-RR-broken.wav</path>
  	    <mode>once</mode>
  	     <condition>
			 <greater-than>
  	      	   <property>/engines/engine/killed</property>
			   <value>0.95</value>
		   </greater-than>
  	    </condition>
  	    <volume>
  	      <value>10.0</value>
  	    </volume>
  	    <reference-dist>180</reference-dist>
  	    <max-dist>500</max-dist>
  	  </engine>
	  
  	<engine>
  	    <name>engine</name>
  	    <path>Aircraft/BMW-S-RR/Sounds/BMW-S-RR-engine-high.wav</path>  <!--BMW-S-RR-engine -->
  	    <mode>looped</mode>
	     <condition>
		   <greater-than>
 	      	  	<property>/engines/engine/rpm</property>
		   		<value>10</value>
	   	 </greater-than>
	    </condition>
  	    <volume>
  	      <property>/engines/engine/rpm</property>
  	      <offset>0.01</offset>
  	      <factor>0.0002</factor>
  	      <min>0.3</min>
  	      <max>2.0</max>
  	    </volume>
  	    <pitch>
  	      <property>/engines/engine/rpm</property>
	      <offset>0.06</offset>
	      <factor>0.0000782</factor>
	      <min>0.0</min>
	      <max>5.8</max>
  	    </pitch>
  	  </engine>

  <gear>
   <name>gearclutch</name>
   <mode>once</mode>
   <path>Aircraft/BMW-S-RR/Sounds/BMW-S-1000-RR-gear.wav</path>
   <condition>
     <property>/engines/engine/gear-sound</property>
   </condition>
   <volume>
    <offset>0.9</offset>
   </volume>
  </gear>

  <squeal>
   <name>squeal</name>
   <path>Sounds/squeal.wav</path>
   <condition>
    <or>
     <property>/gear/gear[0]/wow</property>
     <property>/gear/gear[1]/wow</property>
     <property>/gear/gear[2]/wow</property>
    </or>
   </condition>
   <volume>
    <property>/velocities/speed-down-fps</property>
    <factor>0.6</factor>
    <max>1.0</max>
   </volume>
   <volume>
    <property>/velocities/airspeed-kt</property>
    <factor>0.04</factor>
    <max>1.0</max>
   </volume>
   <volume>
    <internal>dt_stop</internal>
    <factor>0.06</factor>
    <max>1.0</max>
   </volume>
   <pitch>
    <property>/velocities/groundspeed-kt</property>
    <factor>0.0025</factor>
    <offset>0.5</offset>
   </pitch>
  </squeal>
 
  <wind>
   <name>wind</name>
   <mode>looped</mode>
   <path>Sounds/wind.wav</path>
   <property>/velocities/airspeed-kt</property>
   <volume>
     <property>/velocities/airspeed-kt</property>
     <factor>0.0015</factor>
     <min>0.03</min>
     <max>0.25</max>
   </volume>
   <pitch>
    <property>/velocities/airspeed-kt</property>
    <factor>0.0035</factor>
    <offset>1.25</offset>
   </pitch>
  </wind>
  
<start>
    <name>startsignal1</name>
    <path>Aircraft/BMW-S-RR/Sounds/beepStart.wav</path>
    <mode>once</mode>
     <condition>
	 <equals>
      	   <property>/startsignal</property>
	   <value>1</value>
   </equals>
    </condition>
    <volume>
      <value>10.0</value>
    </volume>
    <reference-dist>180</reference-dist>
    <max-dist>500</max-dist>
  </start>	  

	<start>
	    <name>startsignal2</name>
	    <path>Aircraft/BMW-S-RR/Sounds/beepStart.wav</path>
	    <mode>once</mode>
	     <condition>
		 <equals>
	      	   <property>/startsignal</property>
		   <value>2</value>
	   </equals>
	    </condition>
	    <volume>
	      <value>10.0</value>
	    </volume>
	    <reference-dist>180</reference-dist>
	    <max-dist>500</max-dist>
	  </start>
  
	<start>
	    <name>startsignal3</name>
	    <path>Aircraft/BMW-S-RR/Sounds/beepStart.wav</path>
	    <mode>once</mode>
	     <condition>
		 <equals>
	      	   <property>/startsignal</property>
		   <value>3</value>
	   </equals>
	    </condition>
	    <volume>
	      <value>10.0</value>
	    </volume>
	    <reference-dist>180</reference-dist>
	    <max-dist>500</max-dist>
	  </start>

  	<start>
  	    <name>startsignal4</name>
  	    <path>Aircraft/BMW-S-RR/Sounds/beepStart.wav</path>
  	    <mode>once</mode>
  	     <condition>
  		 <equals>
  	      	   <property>/startsignal</property>
  		   <value>4</value>
  	   </equals>
  	    </condition>
  	    <volume>
  	      <value>10.0</value>
  	    </volume>
  	    <reference-dist>180</reference-dist>
  	    <max-dist>500</max-dist>
  	  </start>
  
  	<start>
  	    <name>startsignal5</name>
  	    <path>Aircraft/BMW-S-RR/Sounds/beepStart.wav</path>
  	    <mode>once</mode>
  	     <condition>
  		 <equals>
  	      	   <property>/startsignal</property>
  		   <value>5</value>
  	   </equals>
  	    </condition>
  	    <volume>
  	      <value>10.0</value>
  	    </volume>
  	    <reference-dist>180</reference-dist>
  	    <max-dist>500</max-dist>
  	  </start> 
	<start>
	    <name>startsignal7</name>
	    <path>Aircraft/BMW-S-RR/Sounds/beepStartGo.wav</path>
	    <mode>once</mode>
	     <condition>
		 <equals>
	      	   <property>/startsignal</property>
		   <value>7</value>
	   </equals>
	    </condition>
	    <volume>
	      <value>10.0</value>
	    </volume>
	    <reference-dist>180</reference-dist>
	    <max-dist>500</max-dist>
	  </start>

</fx>
 
</PropertyList>
