    <!--
         this is the Nasal/canvas section where you can run your own Nasal code 
         to access the canvas section 
    -->
      <load>
        <![CDATA[
                 # you can add your canvas-specific code here
                 var my_canvas = canvas.get( cmdarg() ); # this will get a handle to the parent canvas:

                 var root = my_canvas.createGroup();
                 var text = root.createChild("text")
                                .setText("  1.Gear     2.Gear     3.Gear     4.Gear     5.Gear     6.Gear")
                                .setTranslation(30, 290)
                                .setAlignment("left-top")
                                .setFontSize(14)
                                .setFont("LiberationFonts/LiberationSans-Regular.ttf")
                                .set("max-width", 380)
                                .setColor(1,0,0);

                var text2 = root.createChild("text")
                               .setText("Ratio")
                               .setTranslation(150, 30)
                               .setAlignment("left-top")
                               .setFontSize(14)
                               .setFont("LiberationFonts/LiberationSans-Regular.ttf")
                               .set("max-width", 380)
                               .setColor(0,0,1);

                var text3 = root.createChild("text")
                               .setText("vMax")
                               .setTranslation(190, 30)
                               .setAlignment("left-top")
                               .setFontSize(14)
                               .setFont("LiberationFonts/LiberationSans-Regular.ttf")
                               .set("max-width", 380)
                               .setColor(0,1,1);
							   
                 var graph = root.createChild("group");

                 var x_axis = graph.createChild("path", "x-axis")
                                   .moveTo(30, 280)
                                   .lineTo(380, 280)
                                   .setColor(1,0,0)
                                   .setStrokeLineWidth(3);

                 var y_axis = graph.createChild("path", "y-axis")
                                   .moveTo(30, 30)
                                   .lineTo(30, 280)
                                   .setColor(1,0,0)
                                   .setStrokeLineWidth(3);
								   
				 var gear1 = 282 - getprop("controls/Motorcycle/gearbox/gear[0]/ratio")*70;
				 var gear2 = 282 - getprop("controls/Motorcycle/gearbox/gear[1]/ratio")*70;
				 var gear3 = 282 - getprop("controls/Motorcycle/gearbox/gear[2]/ratio")*70;
				 var gear4 = 282 - getprop("controls/Motorcycle/gearbox/gear[3]/ratio")*70;
				 var gear5 = 282 - getprop("controls/Motorcycle/gearbox/gear[4]/ratio")*70;
				 var gear6 = 282 - getprop("controls/Motorcycle/gearbox/gear[5]/ratio")*70;

                 var plot = graph.createChild("path", "data")
                                 .setStrokeLineWidth(2)
                                 .setColor(0,0,1)
                                 .moveTo(40,gear1); # origin

                 var samples = [ # absolute coordinates
                                 [130,gear2], [190,gear3], [250, gear4], [310, gear5], [370, gear6]
                               ];

                 foreach(var set; samples) {
                                             plot.lineTo( set[0], set[1]);
                 }

				 var speed1 = 282 - getprop("controls/Motorcycle/gearbox/gear[0]/vmax")*getprop("controls/Motorcycle/gearbox/gear[0]/speedpercent")*0.8;
				 var speed2 = 282 - getprop("controls/Motorcycle/gearbox/gear[1]/vmax")*getprop("controls/Motorcycle/gearbox/gear[1]/speedpercent")*0.8;
				 var speed3 = 282 - getprop("controls/Motorcycle/gearbox/gear[2]/vmax")*getprop("controls/Motorcycle/gearbox/gear[2]/speedpercent")*0.8;
				 var speed4 = 282 - getprop("controls/Motorcycle/gearbox/gear[3]/vmax")*getprop("controls/Motorcycle/gearbox/gear[3]/speedpercent")*0.8;
				 var speed5 = 282 - getprop("controls/Motorcycle/gearbox/gear[4]/vmax")*getprop("controls/Motorcycle/gearbox/gear[4]/speedpercent")*0.8;
				 var speed6 = 282 - getprop("controls/Motorcycle/gearbox/gear[5]/vmax")*getprop("controls/Motorcycle/gearbox/gear[5]/speedpercent")*0.8;
				 

                 var plot2 = graph.createChild("path", "data")
                                 .setStrokeLineWidth(2)
                                 .setColor(0,1,1)
                                 .moveTo(40,speed1); # origin

                 var samples2 = [ # absolute coordinates
                                 [130,speed2], [190,speed3], [250, speed4], [310, speed5], [370, speed6]
                               ];

                 foreach(var set; samples2) {
                                             plot2.lineTo( set[0], set[1]);
                 }
        ]]>
