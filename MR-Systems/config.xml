	  <hrule/>	  
	  <hrule/>

  	  <group>
  	    <layout>hbox</layout>
  	    <slider>		  
		  <row>0</row>
		  <col>0</col>
  	      <halign>left</halign>
  	      <property>/controls/hang-off-speed</property>
  	      <binding>
			  <command>dialog-apply</command>
		  </binding>
  	      <min>0.0</min>
		  <max>320.0</max>
  	    </slider>
  	    <text>
  		  <row>0</row>
  		  <col>0</col>
    	  <halign>left</halign>
  	      <property>/controls/hang-off-speed</property>
  	      <label>0123456</label>
  	      <format>%.1f</format>
  	      <live>true</live>
  	    </text>
  	    <text>  		 
		  <row>0</row>
  		  <col>1</col>
    	  <halign>right</halign>
  	      <label>............... max . hang-off speed in mph</label>
  	    </text>
  	  </group>

