	 <setting>0.5</setting> 
	 <setting>0.4</setting> 
	 <setting>0.3</setting> 
	 <setting>0.2</setting> 
	 <setting>0.1</setting> 
	 <setting>0.0</setting> 
	</flaps>
	
</sim>

