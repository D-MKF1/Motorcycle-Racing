<PropertyList>

<path>combi.ac</path>

	<animation>
		 <type>material</type>
		 <object-name>neutral</object-name>
		 <object-name>rpm.overspeed.reg</object-name>
		 <emission>
		  <red>0.1</red>
		  <green>1</green>
		  <blue>0.1</blue>
		  <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
	   	</emission>
	</animation>

	<animation>
		 <type>material</type>
		 <object-name>fuel</object-name>
		 <object-name>oil.btn</object-name>
		 <object-name>scs</object-name>
		 <object-name>abs</object-name>
		 <emission>
		  <red>1</red>
		  <green>0</green>
		  <blue>0</blue>
		  <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
	   	</emission>
	</animation>

	<animation>
		 <type>material</type>
		 <object-name>overspeed</object-name>
		 <emission>
		  <red>1</red>
		  <green>1</green>
		  <blue>1</blue>
		  <factor-prop>systems/electrical/outputs/instrument-lights</factor-prop>
	   	</emission>
	</animation>
	
	<animation>
	<type>noshadow</type>
	<object-name>box</object-name>
	<object-name>black</object-name>
	<object-name>rpm.bg</object-name>
	<object-name>rpm.0</object-name>
	<object-name>rpm.1</object-name>
	<object-name>rpm.2</object-name>
	<object-name>rpm.3</object-name>
	<object-name>rpm.4</object-name>
	<object-name>N</object-name>
	<object-name>N.001</object-name>
	<object-name>N.002</object-name>
	<object-name>N.003</object-name>
	<object-name>N.004</object-name>
	<object-name>N.005</object-name>
	<object-name>N.006</object-name>
	<object-name>t-1</object-name>
	<object-name>t-10</object-name>
	<object-name>t-100</object-name>
	<object-name>t-100</object-name>
	<object-name>d-1</object-name>
	<object-name>d-10</object-name>
	<object-name>d-100</object-name>
	<object-name>at-1</object-name>
	<object-name>at-10</object-name>
	<object-name>ct-1</object-name>
	<object-name>ct-10</object-name>
	<object-name>ct-100</object-name>
	<object-name>ct-High</object-name>
	<object-name>ct-Low</object-name>
	<object-name>mph</object-name>
	<object-name>kmh</object-name>
	<object-name>ctrl.bg</object-name>
	<object-name>ctrl.break</object-name>
	<object-name>ctrl.comp.front</object-name>
	<object-name>ctrl.comp.rear</object-name>
	</animation>
	
    <animation>
      <type>select</type>		 
	  	 <object-name>rpm.0</object-name>
		 <object-name>oil.btn</object-name>
      <condition>
        <not>
          <property>engines/engine/running</property>
        </not>
      </condition>
    </animation>
	
	<animation>
	  <type>select</type>
		 <object-name>rpm.bg</object-name>
	  <condition> 
          <property>engines/engine/running</property>
	  </condition>
	</animation>

    <animation>
      <type>select</type>		 
	  	 <object-name>scs</object-name>
      <condition>
		  <or>
	        <not>
	          <property>engines/engine/running</property>
	        </not>
	  	  	<property>controls/Motorcycle/SCS/ctrl-light</property>
		</or>
      </condition>
    </animation>

    <animation>
      <type>select</type>		 
	  	 <object-name>abs</object-name>
      <condition>
		  <or>
	        <not>
	          <property>engines/engine/running</property>
	        </not>
	        <property>controls/Motorcycle/ABS/ctrl-light</property>
		</or>
      </condition>
    </animation>
	
    <animation>
      <type>select</type>		 
	  	 <object-name>overspeed</object-name>
      <condition>
		  <or>
	        <not>
	          <property>engines/engine/running</property>
	        </not>
	        <property>controls/Motorcycle/ctrl-light-overspeed</property>
		</or>
      </condition>
    </animation>
		
    <animation>
     <type>scale</type>
     <object-name>rpm.1</object-name>
     <object-name>rpm.2</object-name>
     <object-name>rpm.3</object-name>
     <object-name>rpm.4</object-name>
     <property>engines/engine/rpm</property>
     <x-min>1.0</x-min>
     <y-min>1.0</y-min>
     <z-min>1.0</z-min>
     <x-factor>0</x-factor>
     <y-factor>0.0009</y-factor>
     <z-factor>0</z-factor>
    </animation>

	<animation>
	  <type>select</type>
		 <object-name>rpm.1</object-name>
	  <condition> 
        <equal>
          <property>engines/engine/running</property>
        </equal>
		<less-than>
          <property>engines/engine/rpm</property>
		  <value>6000</value>
		</less-than>
	  </condition>
	</animation>
	
	<animation>
	  <type>select</type>
		 <object-name>rpm.2</object-name>
		 <object-name>rpm.bg</object-name>
	  <condition> 
        <equal>
          <property>engines/engine/running</property>
        </equal>
		<greater-than>
          <property>engines/engine/rpm</property>
		  <value>6000</value>
		</greater-than>
		<less-than>
          <property>engines/engine/rpm</property>
		  <value>14000</value>
		</less-than>
	  </condition>
	</animation>
	
	<animation>
	  <type>select</type>
		 <object-name>rpm.3</object-name>
		 <object-name>rpm.bg</object-name>
	  <condition> 
        <equal>
          <property>engines/engine/running</property>
        </equal>
		<greater-than>
          <property>engines/engine/rpm</property>
		  <value>14000</value>
		</greater-than>
		<less-than>
          <property>engines/engine/rpm</property>
		  <value>18750</value>
		</less-than>
	  </condition>
	</animation>
	
	<animation>
	  <type>select</type>
		 <object-name>rpm.4</object-name>
		 <object-name>rpm.bg</object-name>
	  <condition> 
        <equal>
          <property>engines/engine/running</property>
        </equal>
		<greater-than>
          <property>engines/engine/rpm</property>
		  <value>18750</value>
		</greater-than>
	  </condition>
	</animation>
	
	<animation>
	  <type>select</type>
		 <object-name>N.006</object-name>
	  <condition> 
		<greater-than>
          <property>/engines/engine/gear</property>
		  <value>5</value>
		</greater-than>
	  </condition>
	</animation>
	
	<animation>
	  <type>select</type>
		 <object-name>N.005</object-name>
	  <condition> 
		<greater-than>
          <property>/engines/engine/gear</property>
		  <value>4</value>
		</greater-than>
	  </condition>
	</animation>
	
	<animation>
	  <type>select</type>
		 <object-name>N.004</object-name>
	  <condition> 
		<greater-than>
          <property>/engines/engine/gear</property>
		  <value>3</value>
		</greater-than>
	  </condition>
	</animation>
	
	<animation>
	  <type>select</type>
		 <object-name>N.003</object-name>
	  <condition> 
		<greater-than>
          <property>/engines/engine/gear</property>
		  <value>2</value>
		</greater-than>
	  </condition>
	</animation>
	
	<animation>
	  <type>select</type>
		 <object-name>N.002</object-name>
	  <condition> 
		<greater-than>
          <property>/engines/engine/gear</property>
		  <value>1</value>
		</greater-than>
	  </condition>
	</animation>
	
	<animation>
	  <type>select</type>
		 <object-name>N.001</object-name>
	  <condition> 
		<greater-than>
          <property>/engines/engine/gear</property>
		  <value>0</value>
		</greater-than>
	  </condition>
	</animation>
	
	<animation>
	  <type>select</type>
		 <object-name>N</object-name>
	  <condition> 
		<less-than>
          <property>/engines/engine/gear</property>
		  <value>1</value>
		</less-than>
	  </condition>
	</animation>
		
    <animation>
      <type>select</type>
		 <object-name>fuel</object-name>
      <condition>
		  <or>
	        <less-than>
	          <property>consumables/fuel/total-fuel-lbs</property>
			  <value>5.0</value>
	        </less-than>
	        <not>
	          <property>engines/engine/running</property>
	        </not>
		  </or>
      </condition>
    </animation>

    <animation>
      <type>select</type>
      <object-name>neutral</object-name>
      <condition>
        <less-than>
          <property>engines/engine/gear</property>
          <value>1</value>
        </less-than>
      </condition>
    </animation>
	
	<model>
	<path>Aircraft/MR-Lights/lightcone-mini.xml</path>
	<name>lights</name>
	<offsets>   
	  <x-m> 0.25</x-m>
	  <y-m> 0.03</y-m>
	  <z-m> 0.08</z-m>
	  <pitch-deg>75</pitch-deg>
	</offsets>
	</model>
	
	<animation>
	  <type>select</type>
	  <object-name>lights</object-name>
	  <condition>
	 	<property>/sim/rendering/rembrandt/enabled</property>
		<greater-than>
	 		<property>/sim/time/sun-angle-rad</property>
			<value>1.4</value>
		</greater-than>
	 </condition>
	</animation>
	
    <animation>
        <type>pick</type>
        <object-name>srpmop</object-name>
		<visible>false</visible>
        <action>
 	    <button>0</button>
            <binding>	    
	    	  <command>property-toggle</command>
			  <property>engines/engine/rpm_regulation</property>	
            </binding>           
        </action>
    </animation>
	
    <animation>
      <type>select</type>
		 <object-name>rpm.overspeed.reg</object-name>
      <condition>
          <property>engines/engine/rpm_regulation</property>
      </condition>
    </animation>
	
    <animation>
      <type>select</type>
		 <object-name>d-10</object-name>
	   	<condition>
	 		<greater-than>
	 	 		<property>instrumentation/Motorcycle/speed-indicator/speed-meter</property>
	 			<value>9</value>
	 		</greater-than>
	 	 </condition>
    </animation>	
	
    <animation>
      <type>select</type>
		 <object-name>d-100</object-name>
	   	<condition>
	 		<greater-than>
	 	 		<property>instrumentation/Motorcycle/speed-indicator/speed-meter</property>
	 			<value>99</value>
	 		</greater-than>
	 	 </condition>
    </animation> 	

  	 <animation>
  	    <type>textranslate</type>
  	    <object-name>d-1</object-name>
  	    <property>instrumentation/Motorcycle/speed-indicator/speed-meter</property>
  	    <factor>0.1</factor>
  	    <step>1</step>
  	    <bias>0.005</bias>
  	    <axis>
  	        <x>1</x>
  	        <y>0</y>
  	        <z>0</z>
  	    </axis>
  	</animation>

      <animation>
          <type>textranslate</type>
          <object-name>d-10</object-name>	  
          <property>instrumentation/Motorcycle/speed-indicator/speed-meter</property>
          <factor>0.01</factor>
          <step>10</step>
          <bias>0.005</bias>
          <axis>
              <x>1</x>
              <y>0</y>
              <z>0</z>
          </axis>
      </animation>

      <animation>
          <type>textranslate</type>
          <object-name>d-100</object-name> 
          <property>instrumentation/Motorcycle/speed-indicator/speed-meter</property>
          <factor>0.001</factor>
          <step>100</step>
          <bias>0.005</bias>
          <axis>
              <x>1</x>
              <y>0</y>
              <z>0</z>
          </axis>
      </animation>
	  
      <!-- selection -->
          <animation>
              <type>pick</type>
              <object-name>select-button-plane</object-name>
      		<visible>false</visible>
              <action>
       	    <button>0</button>
                  <binding>	    
      	    	  <command>property-toggle</command>
      			<property>instrumentation/Motorcycle/speed-indicator/selection</property>
      			<step>1</step>
      			<min>0</min>
      			<max>1</max>
      			<wrap>1</wrap>		
                  </binding>           
              </action>
          </animation>	
	
	      <animation>
	        <type>select</type>
	  		 <object-name>mph</object-name>
	        <condition>
	            <property>instrumentation/Motorcycle/speed-indicator/selection</property>
	        </condition>
	      </animation>
	
	      <animation>
	        <type>select</type>
	  		 <object-name>kmh</object-name>
	        <condition>
				<not>
	            	<property>instrumentation/Motorcycle/speed-indicator/selection</property>
				</not>
	        </condition>
	      </animation>	
		  
	   	 <animation>
	   	    <type>textranslate</type>
	   	    <object-name>t-1</object-name>
	        <property>/instrumentation/clock/indicated-min</property>
	        <factor>0.1</factor>
	   	    <step>1</step>
	   	    <bias>0.005</bias>
	   	    <axis>
	   	        <x>1</x>
	   	        <y>0</y>
	   	        <z>0</z>
	   	    </axis>
	   	</animation>
		  
	   	 <animation>
	   	    <type>textranslate</type>
	   	    <object-name>t-10</object-name>
	        <property>/instrumentation/clock/indicated-min</property>
	        <factor>0.01</factor>
	   	    <step>10</step>
	   	    <bias>0.005</bias>
	   	    <axis>
	   	        <x>1</x>
	   	        <y>0</y>
	   	        <z>0</z>
	   	    </axis>
	   	</animation>
	  
   	 <animation>
   	    <type>textranslate</type>
   	    <object-name>t-100</object-name>
        <property>/instrumentation/clock/local-hour</property>
        <factor>0.1</factor>
   	    <step>1</step>
   	    <bias>0.005</bias>
   	    <axis>
   	        <x>1</x>
   	        <y>0</y>
   	        <z>0</z>
   	    </axis>
   	</animation>
	  
   	 <animation>
   	    <type>textranslate</type>
   	    <object-name>t-1000</object-name>
        <property>/instrumentation/clock/local-hour</property>
        <factor>0.01</factor>
   	    <step>10</step>
   	    <bias>0.005</bias>
   	    <axis>
   	        <x>1</x>
   	        <y>0</y>
   	        <z>0</z>
   	    </axis>
   	</animation>

  	 <animation>
  	    <type>textranslate</type>
  	    <object-name>at-1</object-name>
       <property>/environment/temperature-degc</property>
       <factor>0.1</factor>
  	    <step>1</step>
  	    <bias>0.005</bias>
  	    <axis>
  	        <x>1</x>
  	        <y>0</y>
  	        <z>0</z>
  	    </axis>
  	</animation>
  
  	 <animation>
  	    <type>textranslate</type>
  	    <object-name>at-10</object-name>
       <property>/environment/temperature-degc</property>
       <factor>0.01</factor>
  	    <step>10</step>
  	    <bias>0.005</bias>
  	    <axis>
  	        <x>1</x>
  	        <y>0</y>
  	        <z>0</z>
  	    </axis>
  	</animation>
	
    <animation>
      <type>select</type>
      <object-name>ct-Low</object-name>
      <condition>
        <less-than>
          <property>engines/engine/engine-temperatur</property>
          <value>40</value>
        </less-than>
      </condition>
    </animation>

    <animation>
      <type>select</type>
      <object-name>ct-High</object-name>
      <condition>
		<or>  
	        <greater-than>
	          <property>engines/engine/engine-temperatur</property>
	          <value>140</value>
	        </greater-than>
	        <greater-than>
	          <property>engines/engine/killed</property>
	          <value>0.7</value>
	        </greater-than>			
		</or>
      </condition>
    </animation>
	
    <animation>
      <type>select</type>
      <object-name>ct-10</object-name>
      <condition>
        <greater-than>
          <property>engines/engine[0]/engine-temperatur</property>
          <value>9.999</value>
        </greater-than>
      </condition>
    </animation>
	
    <animation>
      <type>select</type>
      <object-name>ct-100</object-name>
      <condition>
        <greater-than>
          <property>engines/engine[0]/engine-temperatur</property>
          <value>99.999</value>
        </greater-than>
      </condition>
    </animation>
	
 	 <animation>
 	    <type>textranslate</type>
 	    <object-name>ct-1</object-name>
      <property>engines/engine[0]/engine-temperatur</property>
      <factor>0.1</factor>
 	    <step>1</step>
 	    <bias>0.005</bias>
 	    <axis>
 	        <x>1</x>
 	        <y>0</y>
 	        <z>0</z>
 	    </axis>
 	</animation>
 
 	 <animation>
 	    <type>textranslate</type>
 	    <object-name>ct-10</object-name>
      <property>engines/engine[0]/engine-temperatur</property>
      <factor>0.01</factor>
 	    <step>10</step>
 	    <bias>0.005</bias>
 	    <axis>
 	        <x>1</x>
 	        <y>0</y>
 	        <z>0</z>
 	    </axis>
 	</animation>

	 <animation>
	    <type>textranslate</type>
	    <object-name>ct-100</object-name>
     <property>engines/engine[0]/engine-temperatur</property>
     <factor>0.001</factor>
	    <step>100</step>
	    <bias>0.005</bias>
	    <axis>
	        <x>1</x>
	        <y>0</y>
	        <z>0</z>
	    </axis>
	</animation>

    <animation>
     <type>translate</type>
     <object-name>ctrl.break</object-name>
     <property>controls/gear/brake-left</property>
     <factor>0.036</factor>
     <axis>
      <x>0</x>
      <y>0</y>
      <z>1</z>
     </axis>
    </animation>

    <animation>
     <type>scale</type>
     <object-name>ctrl.comp.front</object-name>
     <property>gear/gear[0]/compression-norm</property>
     <x-min>1.0</x-min>
     <y-min>1.0</y-min>
     <z-min>1.0</z-min>
     <x-factor>0</x-factor>
     <y-factor>0</y-factor>
     <z-factor>15</z-factor>
    </animation>

    <animation>
     <type>scale</type>
     <object-name>ctrl.comp.rear</object-name>
     <property>gear/gear[1]/compression-norm</property>
     <x-min>1.0</x-min>
     <y-min>1.0</y-min>
     <z-min>1.0</z-min>
     <x-factor>0</x-factor>
     <y-factor>0</y-factor>
     <z-factor>16</z-factor>
    </animation>
		
</PropertyList>
