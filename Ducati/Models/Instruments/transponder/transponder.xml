<PropertyList>

 <path>transponder.ac</path>
 
 <animation>
  <type>material</type>
  <object-name>green</object-name>
  <emission>
	  <red>0</red>
	  <green>1</green>
	  <blue>0</blue>
	  <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
        </emission>
 </animation>
 
 <animation>
  <type>material</type>
  <object-name>red</object-name>
  <emission>
	  <red>1</red>
	  <green>0</green>
	  <blue>0</blue>
	  <factor-prop>/systems/electrical/outputs/instrument-lights</factor-prop>
        </emission>
 </animation>
    
<!-- selection -->
    <animation>
        <type>pick</type>
        <object-name>box</object-name>
        <object-name>green</object-name>
        <object-name>red</object-name>
		<visible>true</visible>
        <action>
 	    <button>0</button>
            <binding>	    
	    	  <command>property-assign</command>
			  <property>instrumentation/transponder/id-code</property>
			  <value>26</value>		
            </binding>           
        </action>
    </animation>	

    <animation>
      <type>select</type>
		 <object-name>red</object-name>
      <condition>   
		  <not>    
			 <equals>
	          	<property>instrumentation/transponder/transmitted-id</property>
			  	<value>26</value>
	        </equals>
		</not>
      </condition>
    </animation>
  
</PropertyList>