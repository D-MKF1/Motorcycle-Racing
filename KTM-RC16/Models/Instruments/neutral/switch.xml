<PropertyList>

<path>switch.ac</path>
<animation>
    <type>pick</type>
    <object-name>NSwitch</object-name>
   <visible>true</visible>
    <action>
    <button>0</button>
	<repeatable>true</repeatable>
    <binding>	    
 		<command>property-assign</command>
		<property>controls/Motorcycle/neutral</property>
		<value>0</value>	
    </binding>           
    </action>
</animation>

<animation>
    <type>rotate</type>
    <object-name>NSwitch</object-name>
    <property>controls/Motorcycle/neutral</property>
    <factor>5</factor>
      <center>
       <x-m>-0.56</x-m>
       <y-m> 0.19</y-m>
       <z-m> 0.85</z-m>
      </center>
      <axis>
        <x>  0 </x>
        <y>  1 </y>
        <z>  0 </z>
      </axis>
</animation>
</PropertyList>