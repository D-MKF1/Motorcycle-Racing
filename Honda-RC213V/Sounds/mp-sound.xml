<PropertyList>

 <fx>
 
  <engine>
        <name>engineidle</name>
        <path>Aircraft/Honda-RC213V/Sounds/engine.wav</path>
        <mode>looped</mode>
         <condition>
         <less-than> 
            <property>engines/engine/rpm</property>
            <value>1200</value>
          </less-than>
          <greater-than> 
            <property>engines/engine/rpm</property>
            <value>0</value>
          </greater-than>
        </condition>
        <volume>
          <property>engines/engine/mp-osi</property>
          <factor>0.1</factor>
          <min>1.3</min>
          <max>10.25</max>
          <offset>0.001</offset>
        </volume>
	    <pitch>
	      <property>engines/engine/rpm</property>
	      <factor>0.00012</factor>
	      <min>0.001</min>
	      <max>7.0</max>
	      <offset>0.002</offset>
	    </pitch>
        <reference-dist>10</reference-dist>
        <max-dist>500</max-dist>
      </engine>

    <engine>
        <name>engine</name>
        <path>Aircraft/Honda-RC213V/Sounds/engine-high.wav</path>
        <mode>looped</mode>
         <condition>
          <greater-than>
            <property>engines/engine/rpm</property>
            <value>1200</value>
          </greater-than>
        </condition>
	    <volume>
	      <property>engines/engine/mp-osi</property>
	      <factor>0.04</factor>
	      <min>0.9</min>
	      <max>8</max>
	      <offset>0.001</offset>
	    </volume>
	    <pitch>
	      <property>engines/engine/rpm</property>
	      <factor>0.00012</factor>
	      <min>0.001</min>
	      <max>7.0</max>
	      <offset>0.012</offset>
	    </pitch>
        <reference-dist>10</reference-dist>
        <max-dist>1100</max-dist>
      </engine>

    	<engine>
    	    <name>enginecrash</name>
    	    <path>Aircraft/Honda-RC213V/Sounds/broken.wav</path>
    	    <mode>once</mode>
    	     <condition>
  			 <greater-than>
    	       <property>sim/multiplay/generic/float[4]</property>
  			   <value>0.95</value>
  		   </greater-than>
    	    </condition>
    	    <volume>
    	      <value>10.0</value>
    	    </volume>
    	    <reference-dist>180</reference-dist>
    	    <max-dist>500</max-dist>
    	  </engine>
</fx>
 
</PropertyList>
